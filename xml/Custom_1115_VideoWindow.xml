<window id="1115" type="dialog">
	<onunload>ClearProperty(TrailerPlaying,Home)</onunload>
	<animation effect="fade" time="300">VisibleChange</animation>
	<animation effect="fade" start="0" end="100" time="300">WindowOpen</animation>
	<animation effect="fade" start="100" end="0" time="200">WindowClose</animation>
    <controls>
        <control type="videowindow">
			<centerleft>50%</centerleft>
			<centertop>50%</centertop>
			<width>100%</width>
			<height>100%</height>
			<visible>Skin.HasSetting(TrailerFullscreen)</visible>
		</control>
		<control type="group">
			<visible>Player.HasVideo + String.IsEqual(Window(Home).Property(TrailerPlaying),10054)</visible>
			<visible>!Skin.HasSetting(TrailerFullscreen)</visible>
			<control type="multiimage">
				<include>FullScreenDimensions</include>
				<aspectratio>scale</aspectratio>
				<fadetime>400</fadetime>
				<animation effect="fade" time="400">VisibleChange</animation>
				<imagepath background="true" colordiffuse="37FFFFFF">$VAR[MediaFanartVar]</imagepath>
				<timeperimage>3000</timeperimage>
				<randomize>true</randomize>
			</control>
			<control type="image">
				<top>35</top>
				<centerleft>50%</centerleft>
				<width>284</width>
				<height>110</height>
				<aspectratio align="center" aligny="center">keep</aspectratio>
				<texture background="true">$VAR[ClearLogoVar]</texture>
			</control>
			<control type="image">
				<centerleft>50%</centerleft>
				<centertop>50%</centertop>
				<width>1290</width>
				<height>730</height>
				<texture colordiffuse="$VAR[SkinColorVar]">colors/white.png</texture>
			</control>
			<control type="image">
				<centerleft>50%</centerleft>
				<centertop>50%</centertop>
				<width>1280</width>
				<height>720</height>
				<texture>colors/black.png</texture>
			</control>
			<control type="videowindow">
				<centerleft>50%</centerleft>
				<centertop>50%</centertop>
				<width>1280</width>
				<height>720</height>
			</control>
			<control type="group">
				<height>50</height>
				<width>1290</width>
				<bottom>100</bottom>
				<centerleft>50%</centerleft>
				<control type="progress">
					<description>Progressbar</description>
					<height>10</height>
					<width>100%</width>
					<info>Player.Progress</info>
					<texturebg border="3" colordiffuse="80FFFFFF">colors/white50.png</texturebg>
					<midtexture colordiffuse="$VAR[SkinColorVar]">colors/white.png</midtexture>
				</control>
				<control type="group">
					<top>20</top>
					<control type="label">
						<left>0</left>
						<font>font12</font>
						<align>left</align>
						<width>1190</width>
						<label>$INFO[Player.Title]</label>
						<scroll>true</scroll>
					</control>
					<control type="label">
						<right>0</right>
						<font>font12</font>
						<align>right</align>
						<width>150</width>
						<label>$INFO[Player.Time]$INFO[Player.Duration, / ,]</label>
					</control>
				</control>
			</control>
		</control>
    </controls>
</window>