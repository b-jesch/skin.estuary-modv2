<?xml version="1.0" encoding="UTF-8"?>
<window>
	<defaultcontrol always="true">11</defaultcontrol>
	<controls>
		<include>PVRChannelNumberInput</include>
		<control type="group">
			<animation effect="fade" start="100" end="0" time="200" tween="sine" condition="$EXP[infodialog_active]">Conditional</animation>
			<control type="group">
				<depth>DepthOSD</depth>
				<include>OpenClose_Left</include>
				<include content="ContentPanel">
					<param name="width" value="941" />
				</include>
				<control type="group">
					<top>20</top>
					<width>881</width>
					<visible>!Skin.HasSetting(ShowPVRGroups)</visible>
					<control type="image">
						<left>20</left>
						<right>20</right>
						<height>50</height>
						<texture colordiffuse="E6FFFFFF">dialogs/dialog-bg-nobo.png</texture>
					</control>
					<control type="button" id="20">
						<top>5</top>
						<left>10</left>
						<width>240</width>
						<height>40</height>
						<texturenofocus colordiffuse="$VAR[SkinColorVar]">lists/nofocus.png</texturenofocus>
						<texturefocus colordiffuse="$VAR[SkinColorVar]">lists/focus.png</texturefocus>
						<onclick>PreviousChannelGroup</onclick>
						<onleft>22</onleft>
						<onright>22</onright>
						<ondown>11</ondown>
						<onup>11</onup>
					</control>
					<control type="image">
						<left>120</left>
						<top>10</top>
						<width>20</width>
						<height>30</height>
						<texture colordiffuse="80FFFFFF">icons/keyboard/arrowleft.png</texture>
						<animation effect="fade" start="0" end="100" time="150">VisibleChange</animation>
					</control>
					<control type="button" id="22">
						<top>5</top>
						<right>10</right>
						<width>240</width>
						<height>40</height>
						<texturenofocus colordiffuse="$VAR[SkinColorVar]">lists/nofocus.png</texturenofocus>
						<texturefocus colordiffuse="$VAR[SkinColorVar]">lists/focus.png</texturefocus>
						<onclick>NextChannelGroup</onclick>
						<onleft>20</onleft>
						<onright>20</onright>
						<ondown>11</ondown>
						<onup>11</onup>
					</control>
					<control type="image">
						<right>120</right>
						<top>10</top>
						<width>20</width>
						<height>30</height>
						<texture colordiffuse="80FFFFFF">icons/keyboard/arrowright.png</texture>
					</control>
					<control type="button" id="2">
						<top>5</top>
						<left>260</left>
						<right>260</right>
						<height>40</height>
						<texturenofocus colordiffuse="$VAR[SkinColorVar]">lists/nofocus.png</texturenofocus>
						<texturefocus colordiffuse="$VAR[SkinColorVar]">lists/focus.png</texturefocus>
						<align>center</align>
						<aligny>center</aligny>
						<font>font12</font>
						<scroll>true</scroll>
						<onleft>20</onleft>
						<onright>22</onright>
						<onup>11</onup>
						<ondown>11</ondown>
						<label>$INFO[VideoPlayer.ChannelGroup]</label>
					</control>
				</control>
				<control type="fixedlist" id="11">
					<left>0</left>
					<top>80</top>
					<bottom>10</bottom>
					<width>881</width>
					<onleft>PreviousChannelGroup</onleft>
					<onright>NextChannelGroup</onright>
					<onup>2</onup>
					<ondown>2</ondown>
					<pagecontrol>60</pagecontrol>
					<movement>5</movement>
					<focusposition>5</focusposition>
					<scrolltime tween="cubic" easing="out">500</scrolltime>
					<focusedlayout height="90" width="881">
						<control type="image">
							<left>0</left>
							<right>0</right>
							<bottom>0</bottom>
							<texture colordiffuse="$VAR[SkinColorVar]">lists/focus.png</texture>
							<visible>Control.hasFocus(11)</visible>
						</control>
						<control type="image">
							<left>0</left>
							<right>0</right>
							<bottom>0</bottom>
							<texture colordiffuse="$VAR[GradientColorVar]">lists/focus-gradient.png</texture>
							<visible>Control.hasFocus(11)</visible>
							<visible>Skin.HasSetting(EnableGradientColor)</visible>
						</control>
						<control type="image">
							<right>26</right>
							<top>10</top>
							<width>80</width>
							<height>70</height>
							<aspectratio align="right">keep</aspectratio>
							<texture fallback="DefaultTVShows.png">$INFO[listitem.icon]</texture>
						</control>
						<control type="progress">
							<left>105</left>
							<top>58</top>
							<width>50</width>
							<height>12</height>
							<midtexture border="3">progress/texturebg_white.png</midtexture>
							<visible>ListItem.HasEpg</visible>
							<info>ListItem.Progress</info>
						</control>
						<control type="image">
							<right>116</right>
							<top>25</top>
							<width>40</width>
							<height>40</height>
							<texture>$VAR[PVRStatusImageVar]</texture>
						</control>
						<control type="label">
							<left>105</left>
							<top>8</top>
							<height>90</height>
							<right>170</right>
							<aligny>top</aligny>
							<animation effect="slide" start="0,0" end="0,14" time="0" condition="String.IsEmpty(ListItem.Title)">Conditional</animation>
 							<label>$INFO[ListItem.Label]</label>
							<font>font14</font>
							<shadowcolor>text_shadow</shadowcolor>
						</control>
						<control type="label">
							<left>165</left>
							<top>46</top>
							<height>90</height>
							<right>170</right>
							<aligny>top</aligny>
							<font>font12</font>
							<label>$INFO[ListItem.Title]</label>
							<scroll>true</scroll>
							<shadowcolor>text_shadow</shadowcolor>
						</control>
						<control type="label">
							<left>12</left>
							<top>0</top>
							<height>90</height>
							<width>75</width>
							<align>center</align>
							<aligny>center</aligny>
							<font>font32_title</font>
							<label>$INFO[ListItem.ChannelNumberLabel]</label>
							<shadowcolor>text_shadow</shadowcolor>
						</control>
					</focusedlayout>
					<itemlayout height="90" width="881">
						<control type="image">
							<right>26</right>
							<top>10</top>
							<width>80</width>
							<height>70</height>
							<aspectratio align="right">keep</aspectratio>
							<texture fallback="DefaultTVShows.png">$INFO[listitem.icon]</texture>
						</control>
						<control type="progress">
							<left>105</left>
							<top>58</top>
							<width>50</width>
							<height>12</height>
							<colordiffuse>88FFFFFF</colordiffuse>
							<visible>ListItem.HasEpg</visible>
							<info>ListItem.Progress</info>
						</control>
						<control type="image">
							<right>116</right>
							<top>25</top>
							<width>40</width>
							<height>40</height>
							<texture>$VAR[PVRStatusImageVar]</texture>
						</control>
						<control type="label">
							<left>105</left>
							<top>8</top>
							<height>90</height>
							<right>170</right>
							<aligny>top</aligny>
							<font>font14</font>
							<label>$INFO[ListItem.Label]</label>
 							<animation effect="slide" start="0,0" end="0,14" time="0" condition="String.IsEmpty(ListItem.Title)">Conditional</animation>
							<shadowcolor>text_shadow</shadowcolor>
						</control>
						<control type="label">
							<left>165</left>
							<top>46</top>
							<height>90</height>
							<right>170</right>
							<aligny>top</aligny>
							<font>font12</font>
							<label>$INFO[ListItem.Title]</label>
							<shadowcolor>text_shadow</shadowcolor>
							<textcolor>$VAR[SkinColorVar]</textcolor>
						</control>
						<control type="label">
							<left>12</left>
							<top>0</top>
							<height>90</height>
							<width>75</width>
							<align>center</align>
							<aligny>center</aligny>
							<font>font32_title</font>
							<label>$INFO[ListItem.ChannelNumberLabel]</label>
							<textcolor>grey</textcolor>
							<shadowcolor>text_shadow</shadowcolor>
						</control>
					</itemlayout>
				</control>
			</control>
			<control type="scrollbar" id="60">
				<top>80</top>
				<bottom>10</bottom>
				<left>869</left>
				<width>12</width>
				<onleft>11</onleft>
				<texturesliderbackground />
				<onright>11</onright>
				<ondown>61</ondown>
				<onup>61</onup>
				<animation effect="zoom" start="100,100" end="50,100" center="881,0" time="300" tween="sine" easing="inout" condition="!Control.HasFocus(60)">conditional</animation>
				<orientation>vertical</orientation>
			</control>
		</control>
	</controls>
</window>
